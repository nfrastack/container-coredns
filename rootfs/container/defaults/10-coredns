CONFIG_FILE=${CONFIG_FILE:-"coredns.conf"}
CONFIG_INCLUDE=${CONFIG_INCLUDE:-"${CONFIG_PATH}/config.include"}
CONFIG_PATH=${CONFIG_PATH:-"/config/"}
COREDNS_USER=${COREDNS_USER:-"coredns"}
DATA_PATH=${DATA_PATH:-"/data/"}
DEFAULT_CACHE=${DEFAULT_CACHE:-"30"}
DEFAULT_ENABLE_FORWARD=${DEFAULT_ENABLE_FORWARD:-"true"}
DEFAULT_ERRORS=${DEFAULT_ERRORS:-"true"}
DEFAULT_FORWARD_MODE=${DEFAULT_FORWARD_MODE:-"system"}
DEFAULT_FORWARD_UPSTREAM_HOST=${DEFAULT_FORWARD_UPSTREAM_HOST:-"dns://1.1.1.1:53 dns://1.0.0.1:53"}
DEFAULT_LOG_QUERIES=${DEFAULT_LOG_QUERIES:-"true"}
DEFAULT_LOOP=${DEFAULT_LOOP:-"true"}
DEFAULT_RELOAD=${DEFAULT_RELOAD:-"true"}
LISTEN_IP=${LISTEN_IP:-"0.0.0.0"}
LISTEN_PORT=${LISTEN_PORT:-"53"}
LOG_FILE=${LOG_FILE:-"coredns.log"}
LOG_PATH=${LOG_PATH:-"/logs/"}
LOG_TYPE=${LOG_TYPE:-"FILE"}
SETUP_TYPE=${SETUP_TYPE:-"AUTO"}
MAX_CPUS=${MAX_CPUS:-"1"}